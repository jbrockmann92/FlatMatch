@model IEnumerable<FlatMatchApp.Models.RenterViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_RenterLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Renter.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Renter.LastName)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Renter.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Renter.LastName)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Renter.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Renter.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Renter.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
